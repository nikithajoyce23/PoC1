pipeline {
    agent any
    stages {
        stage("Clone Git Repository") {
            steps {
                git(
                    url: "https://github.com/nikithajoyce23/PoC1.git",
                    branch: "main",
                    changelog: true,
                    poll: true
                )
            }
        }
        stage("Create artifacts or make changes") {
            steps {
                sh "touch C://Users//nijoyce//OneDrive - Cisco//Desktop//SourceCode"
                sh "git add C://Users//nijoyce//OneDrive - Cisco//Desktop//SourceCode"
                sh "git commit -m 'Add C://Users//nijoyce//OneDrive - Cisco//Desktop//SourceCode from Jenkins Pipeline'"
            }
        }
        stage("Push to Git Repository") {
            steps {
                withCredentials([gitUsernamePassword(credentialsId: 'Nikitha Joyce', gitToolName: 'Default')]) {
                    sh "git push -u origin main"
                }
            }
        }
    }
    
}
